<header>
  <nav>
    <% if signed_in? %>
      <%= link_to logo, home_path, :class => "raspas_logo" %>
    <% else %>
      <%= link_to logo, root_path, :class => "raspas_logo" %>
    <% end %>
    <ul>
      <li class= "search">
        <%= form_tag :search, action: 'search', method: 'get' do %>
          <%= text_field_tag :query, params[:query], placeholder: "buscar", :id => 'search_field', class: "search_li", autofocus: true %>
          <%= image_submit_tag "lupa.png", :name => nil, :class => "lupa" %> 
        <% end %> 
      </li>
    </ul>
    <% if signed_in? %>
      <!-- <ul>
        <li>
          <%#= link_to (image_tag "heart.png"), feed_user_path(current_user), class: "mural", title: "mural" %>
        </li>
      </ul> -->
      <ul>
        <li><!-- 
          <div class= "mural_count round">
            <%# if current_user.feed.any? %><p class= "p_feed"><%#= current_user.feed.count %></p><%# end %>
          </div> -->
          <%= link_to (image_tag "mural.png"), root_path, class: active?('users', 'feed'), id: "mural", title: "mural" %> 
        </li>
        <li><%= image_submit_tag "raspa.png", id: "button", title: "escrever raspa" %></li>
      </ul>
      <ul class= "nave_r"> 
        <div class= "topo">
          <li><%= link_to (image_tag "menu_arrow.png"), current_user %> 
            <li class= "sider"><%= link_to (image_tag "edit_.png"), edit_user_path(current_user) %></li>   
            <li class= "sider"><%= link_to (image_tag "sair.png"), signout_path, method: "delete" %></li>
          </li>
        </div>   
      </ul> 
      <ul class= "nave_r"> 
        <li><%= link_to current_user.name, current_user, class: active?('users', 'show') || active?('users', 'edit') %></li>
      <ul>
    <% else %>
      <ul>
        <li><%= link_to "sobre o raspas", about_path, class: active?('pages', 'about') %></li>
      </ul> 
      <ul class= "nave_r">
        <div class= "topo">
            <li><%= link_to (image_tag "menu_arrow.png"), signin_path %>
              <li class= "sider"><%= link_to (image_tag "f.png"), "/auth/facebook" %></li> 
              <li class= "sider"><%= link_to (image_tag "t.png"), "/auth/twitter" %></li>
              <li class= "sider"><%= link_to (image_tag "g.png"), "/auth/google" %></li>
            </li>
        </div>
      </ul>
      <ul class= "nave_r"> 
        <li><%= link_to "entrar", signin_path, class: active?('sessions', 'new') %></li>
      </ul>
    <% end %>
  </nav>
</header>