        <% if !signed_in? %>
          <div class= "user_info_board round" >
            <p class= "p_tags"><%= link_to "escrever raspas", signin_path, title: "escrever raspas" %></p></br>
          </div>
        <% end %>
        <div class= "user_info_board round" >
          <p class= "p_tags"><%= link_to "criar pensador", new_author_path, title: "novo pensador" %></p></br>
        </div>
        <% if !signed_in? %>
          <div class= "user_info_board round" >
            <p class= "p_tags"><%= link_to "conectar-se", signin_path, title: "entre no Raspas" %></p></br>
          </div>
        <% end %>
        <div class= "user_info_board round" >
          <p class= "p_tags"><%= link_to "contate-nos", contact_path, title: "nós queremos ouvi-lo!" %></p></br>
        </div>
      <% end %>
      <div class= "user_info_board round">
        <div class= "last_header">
          <p class= "p_tags">curtir</p><p class="p_tag">raspas</p>
          <p class= "p_mais"><%= link_to "+", "http://www.facebook.com/entre.raspas", title: "ir para fanpage Raspas", target: "blank" %></p>
        </div>
        <div class="facebookOuter">
          <div class="facebookInner">
            <div class="fb-like-box" data-href="http://www.facebook.com/entre.raspas" data-width="185" data-height="346" data-show-faces="true" data-show-border='false 'data-stream="false" data-header="false"></div>
          </div>
