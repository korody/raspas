    <div class= "stack_home">
      <% if !signed_in? %>
        <%= render 'shared/welcome' %>
      <% else %>
        <div class="half_quotes round">
          <div class= "sign">
            Obrigado por usar o raspas - uma nova versão está no forno.<br />
            Ajude com perguntas, problemas e sugestões. Link ali embaixo!
          </div>
          <div class= "flag_sign">
            <%= image_tag "super.png" %>
          </div>
