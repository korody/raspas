<% cache "mosaico" do %>  
  <div class= "mosaico">
    <% @authors.shuffle.first(250).each do |author| %>
      <div class= "mosaico_item">
        <% cache author do %>
          <%= link_to (image_tag author.image_url(:medium).to_s), author %>
          <p class= "gradient"><%= link_to author.name, author %></p>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
<div class="raspas">
