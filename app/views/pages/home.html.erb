        <div class= "last_header">
          <p class= "p_tags"><%= Song.count %></p><p class= "p_tag">músicas</p><p class= "p_mais"><%= link_to "+", songs_path, title: "explorar músicas" %></p>
        </div>
        <div class= "last_header">
          <p class= "p_tags"><%= Film.count %></p><p class= "p_tag">filmes</p><p class= "p_mais"><%= link_to "+", films_path, title: "explorar filmes" %></p>
        </div>
        <div class= "last_header">
          <p class= "p_tags"><%= Poem.count %></p><p class= "p_tag">poemas</p><p class= "p_mais"><%= link_to "+", poems_path, title: "explorar poemas" %></p>
        </div>
      </div>
      <% cache @tags do %>
        <div class= "user_info_board round">
          <div class= "last_header">
            <p class= "p_tags">últimos</p><p class="p_tag">temas</p>
            <p class= "p_mais"><%= link_to "+", tags_path, title: "explorar outros temas" %></p>
          </div>
          <div>
            <% @tags.first(8).each do |tag| %>
              <div>
                <%= link_to tag.name, tag, 
                title: "ver raspas sobre #{tag.name}", :class => "but round temas" %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>  
      <% cache @authors do %>
        <div class= "user_info_board round">
          <div class= "last_header">
            <p class= "p_tags">últimos</p><p class="p_tag">pensadores</p>
            <p class= "p_mais"><%= link_to "+", authors_path, title: "explorar pensadores" %></p>
          </div>
          <div>
            <% @authors.first(4).each do |author| %>
              <div class= "last">
                <div class= "last_users">
                  <%= link_to image_tag(author.image_url(:tiny)), author, title: "ver perfil de #{author.name}" %>
                  <div class= "last_upwards">
                    <p><%= link_to author.name, author, title: "ver perfil de #{author.name}" %></p>
                  </div>
                </div>
              </div>
            <% end %>
