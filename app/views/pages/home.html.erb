<% cache "mosaico" do %>  
  <div class= "mosaico">
    <% @authors.shuffle.first(250).each do |author| %>
      <div class= "mosaico_item">
        <% cache author do %>
          <%= link_to (image_tag author.image_url(:medium).to_s), author %>
          <p class= "gradient"><%= link_to author.name, author %></p>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
<div class="raspas">
  <div class="raspas">
    <div class= "user_info">
      <% cache do %>  
        <div class= "logo_avatar round shadow">
          <%= image_tag "half_logo_.png" %>
        </div>
      <% end %>
      <div class= "user_info_board round" >
        <div class= "last_header">
          <p class= "p_tags"><%= Micropost.count %></p><p class= "p_tag">raspas</p><p class= "p_mais"><%= link_to "+", microposts_path, title: "explorar raspas" %></p>
        </div>
        <div class= "last_header">
          <p class= "p_tags"><%= Tag.count %></p><p class= "p_tag">temas</p><p class= "p_mais"><%= link_to "+", tags_path, title: "explorar temas" %></p>
        </div>
        <div class= "last_header">
          <p class= "p_tags"><%= Author.count %></p><p class= "p_tag">pensadores</p><p class= "p_mais"><%= link_to "+", authors_path, title: "explorar pensadores" %></p>
        </div>
        <div>
          <p class= "p_tags"><%= User.count %></p><p class= "p_tag">usuários</p><p class= "p_mais"><%= link_to "+", users_path, title: "explorar usuários" %></p>
        </div>
      </div>
      <% cache @tags do %>
        <div class= "user_info_board round">
          <div class= "last_header">
            <p class= "p_tags">últimos</p><p class="p_tag">temas</p>
            <p class= "p_mais"><%= link_to "+", tags_path, title: "explorar outros temas" %></p>
          </div>
          <div>
            <% @tags.first(8).each do |tag| %>
              <div>
                <%= link_to tag.name, tag, 
                title: "ver raspas sobre #{tag.name}", :class => "but round temas" %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>  
      <% cache @authors do %>
        <div class= "user_info_board round">
          <div class= "last_header">
            <p class= "p_tags">últimos</p><p class="p_tag">pensadores</p>
            <p class= "p_mais"><%= link_to "+", authors_path, title: "explorar pensadores" %></p>
          </div>
          <div>
            <% @authors.first(4).each do |author| %>
              <div class= "last">
                <div class= "last_users">
                  <%= link_to image_tag(author.image_url(:tiny)), author, title: "ver perfil de #{author.name}" %>
                  <div class= "last_upwards">
                    <p><%= link_to author.name, author, title: "ver perfil de #{author.name}" %></p>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>  
      <% cache @users do %>
        <div class= "user_info_board round">
          <div class= "last_header">
            <p class= "p_tags">últimos</p><p class="p_tag">usuários</p>
            <p class= "p_mais"><%= link_to "+", users_path, title: "explorar usuários" %></p>
          </div>
          <div>
            <% @users.first(4).each do |user| %>
              <div class= "last">
                <div class= "last_users">
                  <%= link_to image_tag(user.image_url(:tiny)), user, title: "ver perfil de #{user.name}" %>
                  <div class= "last_upwards">
                    <p><%= link_to user.name, user, title: "ver perfil de #{user.name}" %></p>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
      <% cache do %>  
        <div class= "user_info_board round" >
          <p class= "p_tags"><%= link_to "sobre o raspas", about_path, title: "saiba mais" %></p></br>
        </div>
        <% if !signed_in? %>
          <div class= "user_info_board round" >
            <p class= "p_tags"><%= link_to "escrever raspas", signin_path, title: "escrever raspas" %></p></br>
          </div>
        <% end %>
        <div class= "user_info_board round" >
          <p class= "p_tags"><%= link_to "criar pensador", new_author_path, title: "novo pensador" %></p></br>
        </div>
        <% if !signed_in? %>
          <div class= "user_info_board round" >
            <p class= "p_tags"><%= link_to "conectar-se", signin_path, title: "entre no Raspas" %></p></br>
          </div>
        <% end %>
        <div class= "user_info_board round" >
          <p class= "p_tags"><%= link_to "contate-nos", contact_path, title: "nós queremos ouvi-lo!" %></p></br>
        </div>
      <% end %>
    </div>
    <div class= "stack_home">
      <%= render 'shared/likes' %>
      <% if !signed_in? %>
        <%= render 'shared/welcome' %>
      <% end %>
      <% cache @feed_items do %>  
        <div>
          <%= render @feed_items %>
        </div>
        <%= will_paginate @feed_items %>
      <% end %>
    </div>
  </div>
</div>