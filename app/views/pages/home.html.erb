                  <%= link_to image_tag(song.image_url(:tiny)), song, title: "ver perfil de #{song.name}" %>
                  <div class= "last_upwards">
                    <p><%= link_to song.name, song, title: "ver perfil de #{song.name}" %></p>
                  </div>
