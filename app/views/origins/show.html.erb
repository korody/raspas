<% provide :description, "Melhores frases, mensagens, trechos e passagens de #{@origin.name} de #{@origin.author.name if @origin.author}#{@origin.user.name unless @origin.author}" %>
<div class="raspas"> 
  <div class="user_info">
    <%= render 'origin_info' %>
  </div>
  <div class="stack">
    <%# if @origin %>
      <%# unless @origin.published? %>
        <!-- <div class="half_quotes round">
          <div class= "sign">
            O perfil de <%#= @origin.name %> é recente e está sob análise.<br />
            Não gosta do que está vendo? Marque como abusivo!
          </div>
          <div class= "flag_sign">
            <%#= link_to (image_tag "flag_sign.png"), @origin %>
          </div>
        </div> -->
      <%# end %> 
    <%# end %>
    <% if signed_in? %>
      <% if @origin.image.blank? %>
        <div class="half_quotes round">
          <div class= "sign">
            Dica: adicione a capa de <%= @origin.name %>!<br />
            Edite esta origem pela engrenagem ao lado do nome.
          </div>
          <div class= "flag_sign">
            <%= image_tag "happy.png" %>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class ="welcome_space"></div>
      <%= render 'shared/welcome' %>
    <% end %>
    <div>
      <% if !@microposts.empty? %>
        <%= render @microposts %>
        <%= will_paginate @microposts %>
      <% end %>
      <% if !@origin.link.blank? %>
        <div class= "origins round sahdow">
          <div class= "videos">
            <iframe width="560" height="350" src="<%= (@origin.link).html_safe %>" frameborder="0" allowfullscreen></iframe>
          </div>  
        </div> 
      <% end %>
      <% if !@origin.content.blank? %>
        <%= render 'origin_content', origin: @origin %>  
      <% end %>
    </div>
  </div>
</div>