<div class= "origin_card">
  <div class= "origin_card_avatar">
    <%= link_to image_tag(other.image_url(:regular)), other %>
  </div>
  <div class= "origin_card_info">
    <div class= 'origin_type'>
      <%= link_to (image_tag 'other.png'), other %>
    </div>
    <div class= "origin_card_name relative">
      <%= link_to other.name, other %><br />
      <% if other.author.present? %>
        { <%= link_to other.author.name, other.author, class: "origin_author" %><br />
      <% else %>
        { <%= link_to other.user.name, other.user, class: "origin_author" %><br />
      <% end %>
    </div>
  </div>
</div>
