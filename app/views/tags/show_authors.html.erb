<div class= "home">
	<div class= "title">
		<p class= "p_search"><%= @tag.authors.count %> pensadores foram citados com o tema <%= @tag.name %></p>
		<%= link_to "voltar para raspas sobre #{@tag.name}", @tag %>
	</div>
	<ul class="users">
	  <li><%= render @tag.authors %></li>
	</ul>
	<div class= "pagination_square">
		<%= will_paginate @authors %>
	</div>
</div>