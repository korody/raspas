<div class= "user_feed_avatar">
	<%= link_to image_tag(@user.image_url(:medium)), @user, title: "voltar para #{@user.name}" %>
</div>
<div class= "user_feed_side">
	<%= render "stats_relations" %>
</div>
<div class= "user_feed_arrow">
	<%= image_tag "ico_mural_big.png", :alt => "lÃª", title: "mural" %>
</div>
<div class= "user_feed_follow">
    <% unless @user.feed.empty? %>
	    <% @user.feed.shuffle.last(4).each do |micropost| %>
	    	<div class= "mural_feed">
	    		<% if micropost.author %>	
	    			<%= link_to image_tag(micropost.author.image_url(:tiny)), micropost_path(micropost), title: "ver raspa de #{micropost.author.name}" %>
	    			<div class= "mural_feed_p">
		    			<b><%= link_to micropost.user.name, micropost.user, title: "ver + de #{micropost.user.name}" %></b> citou <b><%= link_to micropost.author.name, micropost.author, title: "ver + de #{micropost.author.name}" %></b>:
		    			<br />
						<%= link_to micropost.content.first(43), micropost_path(micropost), title: "ver esta raspa" %>...
					</div>	
				<% else %>
	    			<%= link_to image_tag(micropost.user.image_url(:tiny)), micropost_path(micropost), title: "ver raspa de #{micropost.user.name}" %>
	    			<div class= "mural_feed_p">
						<b><%= link_to micropost.user.name, micropost.user, title: "ver + de #{micropost.user.name}" %></b> escreveu:
		    			<br />
						<%= link_to micropost.content.first(43), micropost_path(micropost), title: "ver esta raspa" %>...
					</div>
				<% end %>
			</div>
		<% end %>
	<% end %>
</div>