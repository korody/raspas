<div class="raspas">
  <div class="user_info">
    <%= render 'user_info' %>
  </div>
  <div class="stack">
    <% if current_user?(@user) %>
      <% if current_user.microposts.empty? %>
        <div class="half_quotes round">
          <div class= "sign">
            Clique no lápis acima e <u>escreva suas primeiras raspas!</u><br />
            <u>Crie um pensador</u> especificando seu nome em uma nova raspa.
          </div>
          <div class= "flag_sign">
            <%= image_tag "super.png" %>
          </div>
        </div>
      <% else %>
        <% if current_user.image.default_url.empty? %>
          <div class="half_quotes round">
            <div class= "sign">
              Dica: Que tal uma foto bacana para o hall da fama?<br />
              Edite seu perfil clicando na engrenagem ao lado de seu nome!
            </div>
            <div class= "flag_sign">
              <%= image_tag "happy.png" %>
            </div>
          </div>
        <% end %>
      <% end %> 
    <% end %>
    <% unless @microposts.empty? %>
    	<%= render @microposts %>
    <% else %>
      <% if !current_user?(@user) %>
        <div class= "half_quotes round">
          <div class= "sign">
            <%= @user.name %> ainda não possui nenhuma raspa.<br />
            Explore as raspas de outros <%= link_to "usuários", users_path %>!
          </div>
          <div class= "flag_sign">
            <%= image_tag "happy.png" %>
          </div>
        </div>
      <% end %>  	
    <% end %>
    <%= will_paginate @microposts %>
  </div>
</div>