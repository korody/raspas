<% if signed_in? %>
	<% if !current_user?(user) %>
		<%= div_for user do %>
			<% if current_user.following?(user) %>
				<%= render 'users/unfollow', user: user %>
			<% else %>
				<%= render 'users/follow', user: user %>
			<% end %>
		<% end %>
	<% else %>
		<% if !@user %>
  		<%= link_to "seu eu interior", current_user, class: "unfollow edit but round actions" %>
		<% end %>
	<% end %>	
<% else %>
	<div>
		<%= link_to "seguir", signin_path, class: "follow edit but round actions" %>
	</div>
<% end %>