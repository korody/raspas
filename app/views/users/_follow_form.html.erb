<% if signed_in? %>
	<% unless current_user?(@user) %>
		<div id= "follow_form" >
			<% if current_user.following?(@user) %>
				<%= render 'unfollow' %>
			<% else %>
				<%= render 'follow' %>
			<% end %>
		</div>
	<% end %>
<% else %>
	<div>
		<%= link_to "seguir", signin_path, :class => "fan edit but round actions" %>
	</div>
<% end %>