<% if signed_in? %>
  <div class= "feed_mosaico">
    <% @idols.shuffle.each do |author| %>
      <div class= "feed_mosaico_each">
        <%= link_to (image_tag author.image_url(:medium)), author %>
        <p class= "gradient"><%= link_to author.name, author %></p>
      </div>
    <% end %>
    <% @following.shuffle.each do |user| %>
      <div class= "feed_mosaico_each">
        <%= link_to (image_tag user.image_url(:medium)), user %>
        <p class= "gradient"><%= link_to user.name, user %></p>
      </div>
    <% end %>
  </div>
  <div class= "user_feed">
    <%= render 'users/user_feed' %>
  </div>
  <div class= "home">
    <% if @following.empty? && @user.idols.empty? %>
      <div class="half_quotes round">
        <div class= "sign">
          Torne-se fã de pensadores e siga seus amigos para acompanhar todas as raspas aqui!<br />
          Explore abaixo alguns perfis já criados ou ache seus ídolos e amigos na busca acima!
        </div>
        <div class= "flag_sign">
          <%= image_tag "super.png" %>
        </div>
      </div>
      <div class= "home_authors">
        <% @authors_intro.shuffle.first(12).each do |author| %>
          <div class= "home_authors_each">
            <p><%= link_to author.name, author %></p>
            <%= link_to (image_tag author.image_url(:medium)), author %>
          </div>
        <% end %>
      </div>
      <br />
      <br />
      <div class= "home_authors">
        <% @users_intro.shuffle.first(12).each do |user| %>
          <div class= "home_authors_each">
            <p><%= link_to user.name, user %></p>
            <%= link_to image_tag(user.image_url(:medium)), user %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div>
        <%= render 'shared/feed' %>
      </div>
    <% end %> 
  </div>
<% end %>
