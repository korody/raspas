<div class= "user_info">
	<div class= "user_avatar">
		<%= image_tag @user.image_url(:profile).to_s, alt: @user.name %>
	</div>
	<div class= "user_info_board round" >
		<div class= "name_edit">
			<p><%= @user.name %></p>
			<% if signed_in? %>
				<% if current_user?(@user) %>	
					<%= link_to (image_tag "edit.png", alt: "editar perfil"), edit_user_path(current_user) %>
				<% end %>
			<% end %>
		</div>
		<% if @user.job? %>
			<p><%= @user.job %></p>
		<% end %>
		<% if @user.tipo? %>
			<p><%= @user.tipo %></p>
		<% end %>
		<% if @user.origin? %>
			<p><%= @user.origin %></p>
		<% end %>		
		<%= render 'follow_form', user: @user %>
	</div>
	<% if @user.bio? %>
		<div class= "user_info_board round">
			<div class= "bio">
				<%= @user.bio %>
			</div>
		</div>
	<% end %>
	<div class= "user_info_board round" >
		<%= render 'stats_raspas' %>
	</div>
	<div class= "user_info_board round" >
		<%= render 'stats_relations' %>
	</div>
	<% if !@tags.empty? %>
		<div class= "user_info_board round">
			<div class= "last_header">
				<p class="p_tag">temas</p><p class= "p_tags">escritos</p>
		        <p class= "p_mais"><%= link_to "+", tags_user_path(@user), title: "ver todos os temas escritos por #{@user.name}" %></p>
	    	</div>
			<div>
				<% @tags.first(8).each do |tag| %>
				  <div>
				    <%= link_to tag.name, tag, 
				    title: "ver raspas sobre #{tag.name}", :class => "but round temas" %>
				  </div>
				<% end %>
			</div>
		</div>
	<% end %>
	<% if !@authors.empty? %>
		<div class= "user_info_board round">
			<div class= "last_header">
				<p class="p_tag">pensadores</p><p class= "p_tags">citados</p>
		        <p class= "p_mais"><%= link_to "+", authors_user_path(@user), title: "ver todos os pensadores citados por #{@user.name}" %></p>
	    	</div>
			<div>
				<% @authors.shuffle.first(4).each do |author| %>
			        <div class= "last">
			            <div class= "last_users">
			            	<%= link_to image_tag(author.image_url(:tiny), alt: author.name), author, title: "ver perfil de #{author.name}" %>
                			<div class= "last_upwards">
			            		<p><%= link_to author.name, author, title: "ver perfil de #{author.name}" %></p>
			        		</div>
			        	</div>
			        </div>
		        <% end %>
			</div>
		</div>
	<% end %>
	<% if !@books.empty? %>
		<div class= "user_info_board round">
			<div class= "last_header">
				<p class="p_tag">livros</p><p class= "p_tags">mencionados</p>
		        <p class= "p_mais"><%= link_to "+", origins_user_path(@user), title: "ver todos as publicações de #{@user.name}" %></p>
	    	</div>
			<div>
				<% @books.shuffle.first(4).each do |book| %>
	        <div class= "last">
	            <div class= "last_users">
	            	<%= link_to image_tag(book.image_url(:tiny), alt: book.name), book, title: "ver perfil de #{book.name}" %>
            			<div class= "last_upwards">
	            		<p><%= link_to book.name, book, title: "ver perfil de #{book.name}" %></p>
	        		</div>
	        	</div>
	        </div>
        <% end %>
			</div>
		</div>
	<% end %>
	<% if !@songs.empty? %>
		<div class= "user_info_board round">
			<div class= "last_header">
				<p class="p_tag">músicas</p><p class= "p_tags">citadas</p>
		        <p class= "p_mais"><%= link_to "+", origins_user_path(@user), title: "ver todos as publicações de #{@user.name}" %></p>
	    	</div>
			<div>
				<% @songs.shuffle.first(4).each do |song| %>
	        <div class= "last">
	            <div class= "last_users">
	            	<%= link_to image_tag(song.image_url(:tiny), alt: song.name), song, title: "ver perfil de #{song.name}" %>
            			<div class= "last_upwards">
	            		<p><%= link_to song.name, song, title: "ver perfil de #{song.name}" %></p>
	        		</div>
	        	</div>
	        </div>
        <% end %>
			</div>
		</div>
	<% end %>
	<% if !@poems.empty? %>
		<div class= "user_info_board round">
			<div class= "last_header">
				<p class="p_tag">poemas</p><p class= "p_tags">recitados</p>
		        <p class= "p_mais"><%= link_to "+", origins_user_path(@user), title: "ver todos as publicações de #{@user.name}" %></p>
	    	</div>
			<div>
				<% @poems.shuffle.first(4).each do |poem| %>
	        <div class= "last">
	            <div class= "last_users">
	            	<%= link_to image_tag(poem.image_url(:tiny), alt: poem.name), poem, title: "ver perfil de #{poem.name}" %>
            			<div class= "last_upwards">
	            		<p><%= link_to poem.name, poem, title: "ver perfil de #{poem.name}" %></p>
	        		</div>
	        	</div>
	        </div>
        <% end %>
			</div>
		</div>
	<% end %>
	<% if !@films.empty? %>
		<div class= "user_info_board round">
			<div class= "last_header">
				<p class="p_tag">filmes</p><p class= "p_tags">citados</p>
		        <p class= "p_mais"><%= link_to "+", origins_user_path(@user), title: "ver todos as publicações de #{@user.name}" %></p>
	    	</div>
			<div>
				<% @films.shuffle.first(4).each do |film| %>
	        <div class= "last">
	            <div class= "last_users">
	            	<%= link_to image_tag(film.image_url(:tiny), alt: film.name), film, title: "ver perfil de #{film.name}" %>
            			<div class= "last_upwards">
	            		<p><%= link_to film.name, film, title: "ver perfil de #{film.name}" %></p>
	        		</div>
	        	</div>
	        </div>
        <% end %>
			</div>
		</div>
	<% end %>
	<% if !@others.empty? %>
		<div class= "user_info_board round">
			<div class= "last_header">
				<p class= "p_tags">outros</p><p class="p_tag">materiais</p>
		        <p class= "p_mais"><%= link_to "+", origins_user_path(@user), title: "ver todos as publicações de #{@user.name}" %></p>
	    	</div>
			<div>
				<% @others.shuffle.first(4).each do |other| %>
	        <div class= "last">
	            <div class= "last_users">
	            	<%= link_to image_tag(other.image_url(:tiny), alt: other.name), other, title: "ver perfil de #{other.name}" %>
            			<div class= "last_upwards">
	            		<p><%= link_to other.name, other, title: "ver perfil de #{other.name}" %></p>
	        		</div>
	        	</div>
	        </div>
        <% end %>
			</div>
		</div>
	<% end %>
	<div class= "user_info_board round">
		<div class= "last_header">
		  <p class= "p_tags">outros</p><p class="p_tag">usuários</p>
		  <p class= "p_mais"><%= link_to "+", users_path, title: "explorar usuários" %></p>
		</div>
		<div>
			<% @users.shuffle.first(4).each do |user| %>
				<div class= "last">
				  <div class= "last_users">
				    <%= link_to image_tag(user.image_url(:tiny), alt: user.name), user, title: "ver perfil de #{user.name}" %>
				    <div class= "last_upwards">
				      <p><%= link_to user.name, user, title: "ver perfil de #{user.name}" %></p>
				    </div>
				  </div>
				</div>
			<% end %>
		</div>
	</div>
</div>