<div class= "user_info">
	<div class= "user_avatar">
		<%= image_tag @user.image_url(:regular).to_s %>
	</div>
	<div class= "user_info_board round" >
		<div class= "name_edit">
			<p><%= @user.name %></p>
			<% if signed_in? %>
				<% if current_user?(@user) %>	
					<%= link_to (image_tag "edit.png"), edit_user_path(current_user) %>
				<% end %>
			<% end %>
		</div>
		<% if @user.job? %>
			<p><%= @user.job %></p>
		<% end %>
		<% if @user.tipo? %>
			<p><%= @user.tipo %></p>
		<% end %>
		<% if @user.origin? %>
			<p><%= @user.origin %></p>
		<% end %>		
		<%= render 'follow_form' if signed_in? %>
	</div>
	<% if @user.bio? %>
		<div class= "user_info_board round">
			<div class= "bio">
				<%= @user.bio %>
			</div>
		</div>
	<% end %>
	<div class= "user_info_board round" >
		<%= render 'stats_raspas' %>
	</div>
	<div class= "user_info_board round" >
		<%= render 'stats_relations' %>
	</div>
	<% if !@tags.empty? %>
		<div class= "user_info_board round">
			<div class= "last_header">
				<p class="p_tag">temas</p><p class= "p_tags">escritos</p>
		        <p class= "p_mais"><%= link_to "+", tags_user_path(@user), title: "ver todos os temas escritos por #{@user.name}" %></p>
	    	</div>
			<div>
				<% @tags.first(8).each do |tag| %>
				  <div>
				    <%= link_to tag.name, tag, 
				    title: "ver raspas sobre #{tag.name}", :class => "but round temas" %>
				  </div>
				<% end %>
			</div>
		</div>
	<% end %>
	<% if !@authors.empty? %>
		<div class= "user_info_board round">
			<div class= "last_header">
				<p class="p_tag">pensadores</p><p class= "p_tags">citados</p>
		        <p class= "p_mais"><%= link_to "+", authors_user_path(@user), title: "ver todos os pensadores citados por #{@user.name}" %></p>
	    	</div>
			<div>
				<% @authors.first(4).each do |author| %>
			        <div class= "last">
			            <div class= "last_users">
			            	<%= link_to image_tag(author.image_url(:tiny)), author, title: "ver perfil de #{author.name}" %>
                			<div class= "last_upwards">
			            		<p><%= link_to author.name, author, title: "ver perfil de #{author.name}" %></p>
			        		</div>
			        	</div>
			        </div>
		        <% end %>
			</div>
		</div>
	<% end %>
</div>