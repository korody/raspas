<div class="quotes round">
  <div class= "quote">
    <div class= "quote_text">
      <div class= "upwards">
        <% if !feed_item.author %>
          <%= feed_item.content %>
        <% else %>
          &quot;<%= feed_item.content %>&quot;
        <% end %>
      </div>
    </div>
    <div class="user">
      <%= image_tag "ico_raspas.png", alt: "raspa por" %>
      <% if !feed_item.author %>
        <%= link_to feed_item.user.name, feed_item.user, title: "ver + de #{feed_item.user.name}" %>
      <% else %>
        <%= link_to feed_item.author.name, feed_item.author, title: "ver + de #{feed_item.author.name}" %>
      <% end %>
    </div>
    <div class="timestamp">
      <%= time_ago_in_words(feed_item.created_at) %> /
      <% if !feed_item.tags.empty? %>
        sobre 
          <% feed_item.tags.each do |tag| %>
            <%= link_to tag.name, tag, title: "ver + raspas sobre #{tag.name}" %> /
          <% end %>      
      <% end %>
      <% unless !feed_item.origem? %>
        / extraído de <%= feed_item.origem %>
      <% end %>
      <% if !current_user?(feed_item.user) %>
        / por <%= link_to feed_item.user.name, feed_item.user, title: "ver + de #{feed_item.user.name}" %>
      <% end %>
      <% if feed_item.author %>
        por <%= link_to feed_item.user.name, feed_item.user, title: "ver + de #{feed_item.user.name}" %>
        <% if !feed_item.author.published? %>
          / raspa <%= link_to "sob análise", @author %>
          <%= link_to (image_tag "flag_ico.png"), root_path %>
        <% end %>
      <% else %>
        denunciar <%= link_to (image_tag "flag_ico.png"), root_path %>
      <% end %>
    </div>
  </div>
  <div class= "quote_corner">
     <div class= "top_corner">
        <% if current_user?(feed_item.user) %>
          <%= link_to (image_tag "trash.png"), feed_item, :method => :delete,
                                                 :confirm => "apagar esta raspa?",
                                                 :title => "descartar",
                                                 :class => "round" %>
        <% else %>
          <%= link_to (image_tag "reaspa.png"), reaspas_micropost_path(feed_item) %>
        <% end %>
      </div>
    <div class= "social">
      <%= render 'shared/social' %>
    </div>

    <% if !current_user?(feed_item.user) %>
      <div class= "user_id">
        <%= link_to image_tag(feed_item.user.photo.url(:medium)), feed_item.user, 
        title: "ver perfil de #{feed_item.user.name}" %>
      </div>
    <% end %>
  </div>
</div>