<div class= "user_info">
	<div class= "user_avatar">
		<%= link_to (image_tag "raspas_logo_user.jpg"), root_path %>
	</div>
	<div class= "show_info">
		<div class= "user_info_board round">
			<p class="p_tags">explorando</p> 
			<br /><p class="p_tag"><%= Micropost.count %></p>
			<p class="p_tags">raspas</p>
		</div>
		<div class= "user_info_board round">
			<div class= "last_header">
				<p class="p_tag">filtre </p><p class="p_tags">por</p><p class="p_tag"> temas</p>
				<p class= "p_mais"><%= link_to "+", tags_path, title: "explorar + temas" %></p>
			</div>
			<% @tags.last(8).each do |tag| %>
			  <div>
			    <%= link_to tag.name, tag, :class => "but round temas", title: "ver raspas sobre #{tag.name}" %>
			  </div>
			<% end %>
		</div>
	</div>
</div>