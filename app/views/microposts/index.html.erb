<div class= "home">
	<div class="user_info">
	 	<%= render 'micropost_explorer' %>
	</div>
	<div class="stack">
	    <% if !signed_in? %>
	      <div class ="welcome_space"></div>
	      <%= render 'shared/welcome' %>
	    <% end %>
	    <% unless @microposts.empty? %>
	      <%= render @microposts %>
	    <% end %>
	    <div class= "pagination_square">
			<%= will_paginate @microposts %>
		</div>
	</div>
</div>