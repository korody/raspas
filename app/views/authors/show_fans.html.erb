<div class="home">  
	<div class= "user_feed">
	    <%= render 'author_fans' %>
	</div>
	<% if @fans.empty? %>
		<div class= "title">
			<p class= "p_search">nenhum fã encontrado</p><%= link_to "você é fã de #{@author.name}?", 
			@author %>
		</div>
	<% else %>
		<div class= "home">
			<ul class="users">
				<li><%= render @fans %></li>
			</ul>
		</div>
	<% end %>
</div>	
<%= will_paginate @fans %>