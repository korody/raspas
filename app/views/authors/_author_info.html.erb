<div class= "user_info">
	<div class= "user_avatar">
		<%= link_to (image_tag @author.image_url(:regular).to_s), edit_author_path %>
	</div>
	<div class= "user_info">
		<div class= "user_info_board round">
			<div class= "name_edit">
				<p><%= @author.name %></p>
				<%= link_to (image_tag "edit.png"), edit_author_path %>
			</div>
			<% if @author.job? %>
				<%= @author.job  %><br />
			<% end %>
			<% if @author.tipo? %>
				<%= @author.tipo %><br />
			<% end %>
			<% if @author.origin? %>
				<%= @author.origin %><br />
			<% end %>
			<%= render 'fan_form', author: @author %>
		</div>
		<% if @author.bio? %>
			<div class= "user_info_board round" >
				<div class= "bio">
					<%= @author.bio %>
				</div>
			</div>
		<% end %>
		<div class= "user_info_board round" >
			<%= render 'stats' %>
		</div>
		<% if !@tags.empty? %>
			<div class= "user_info_board round">
				<div class= "last_header">
					<p class="p_tag">temas</p><p class= "p_tags">escritos</p>
			        <p class= "p_mais"><%= link_to "+", tags_author_path(@author), title: "ver todos os temas de #{@author.name}" %></p>
			    </div>
				<div>
					<% @tags.shuffle.first(20).each do |tag| %>
					  <div>
					    <%= link_to tag.name, tag, 
					    title: "ver + raspas sobre #{tag.name}", :class => "but round temas" %>
					  </div>
					<% end %>
				</div>
			</div>
		<% end %>
		<% if !@users.empty? %>
			<div class= "user_info_board round">
				<div class= "last_header">
					<p class="p_tag">citado</p><p class= "p_tags">pelos</p><p class="p_tag">usuários</p>
			        <p class= "p_mais"><%= link_to "+", users_author_path(@author), title: "ver todos os usuários que já citaram #{@author.name}" %></p>
		    	</div>
				<div>
					<% @users.shuffle.first(4).each do |user| %>
				        <div class= "last">
				            <div class= "last_users">
				            	<%= link_to image_tag(user.image_url(:tiny)), user, title: "ver perfil de #{user.name}" %>
	                			<div class= "last_upwards">
				            		<p><%= link_to user.name, user, title: "ver perfil de #{user.name}" %></p>
				        		</div>
				        	</div>
				        </div>
			        <% end %>
				</div>
			</div>
		<% end %>
		<% if @books.present? %>
			<div class= "user_info_board round">
				<div class= "last_header">
				  <p class= "p_tag">livros</p><p class="p_tags">escritos</p>
				  <p class= "p_mais"><%= link_to "+", origins_author_path(@author), title: "explorar pensadores" %></p>
				</div>
				<div>
					<% @books.shuffle.first(4).each do |book| %>
						<div class= "last">
						  <div class= "last_users">
						    <%= link_to image_tag(book.image_url(:tiny)), book, title: "ver perfil de #{book.name}" %>
						    <div class= "last_upwards">
						      <p><%= link_to book.name, book, title: "ver perfil de #{book.name}" %></p>
						    </div>
						  </div>
						</div>
					<% end %>
				</div>
			</div>
		<% end %>
		<% if @poems.present? %>
			<div class= "user_info_board round">
				<div class= "last_header">
				  <p class= "p_tag">poemas</p><p class="p_tags">escritos</p>
				  <p class= "p_mais"><%= link_to "+", origins_path, title: "explorar pensadores" %></p>
				</div>
				<div>
					<% @poems.shuffle.first(4).each do |poem| %>
						<div class= "last">
						  <div class= "last_users">
						    <%= link_to image_tag(poem.image_url(:tiny)), poem, title: "ver perfil de #{poem.name}" %>
						    <div class= "last_upwards">
						      <p><%= link_to poem.name, poem, title: "ver perfil de #{poem.name}" %></p>
						    </div>
						  </div>
						</div>
					<% end %>
				</div>
			</div>
		<% end %>
		<% if @songs.present? %>
			<div class= "user_info_board round">
				<div class= "last_header">
				  <p class= "p_tag">músicas</p><p class="p_tags">cantadas</p>
				  <p class= "p_mais"><%= link_to "+", origins_path, title: "explorar pensadores" %></p>
				</div>
				<div>
					<% @songs.shuffle.first(4).each do |song| %>
						<div class= "last">
						  <div class= "last_users">
						    <%= link_to image_tag(song.image_url(:tiny)), song, title: "ver perfil de #{song.name}" %>
						    <div class= "last_upwards">
						      <p><%= link_to song.name, song, title: "ver perfil de #{song.name}" %></p>
						    </div>
						  </div>
						</div>
					<% end %>
				</div>
			</div>
		<% end %>
		<% if @films.present? %>
			<div class= "user_info_board round">
				<div class= "last_header">
				  <p class= "p_tag">filmes</p><p class="p_tags">rodados</p>
				  <p class= "p_mais"><%= link_to "+", origins_path, title: "explorar pensadores" %></p>
				</div>
				<div>
					<% @films.shuffle.first(4).each do |film| %>
						<div class= "last">
						  <div class= "last_users">
						    <%= link_to image_tag(film.image_url(:tiny)), film, title: "ver perfil de #{film.name}" %>
						    <div class= "last_upwards">
						      <p><%= link_to film.name, film, title: "ver perfil de #{film.name}" %></p>
						    </div>
						  </div>
						</div>
					<% end %>
				</div>
			</div>
		<% end %>
		<% if @others.present? %>
			<div class= "user_info_board round">
				<div class= "last_header">
				  <p class= "p_tag">materiais</p><p class="p_tags">publicados</p>
				  <p class= "p_mais"><%= link_to "+", origins_path, title: "explorar pensadores" %></p>
				</div>
				<div>
					<% @others.shuffle.first(4).each do |other| %>
						<div class= "last">
						  <div class= "last_users">
						    <%= link_to image_tag(other.image_url(:tiny)), other, title: "ver perfil de #{other.name}" %>
						    <div class= "last_upwards">
						      <p><%= link_to other.name, other, title: "ver perfil de #{other.name}" %></p>
						    </div>
						  </div>
						</div>
					<% end %>
				</div>
			</div>
		<% end %>
		<div class= "user_info_board round">
			<div class= "last_header">
			  <p class= "p_tags">outros</p><p class="p_tag">pensadores</p>
			  <p class= "p_mais"><%= link_to "+", authors_path, title: "explorar pensadores" %></p>
			</div>
			<div>
				<% @authors.shuffle.first(4).each do |author| %>
					<div class= "last">
					  <div class= "last_users">
					    <%= link_to image_tag(author.image_url(:tiny)), author, title: "ver perfil de #{author.name}" %>
					    <div class= "last_upwards">
					      <p><%= link_to author.name, author, title: "ver perfil de #{author.name}" %></p>
					    </div>
					  </div>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>