<div class= "user_feed_avatar">
	<%= link_to image_tag(@author.image_url(:regular)), @author, title: "voltar para #{@author.name}" %>
</div>
<div class= "user_feed_side">
<br />
	<%= render "stats" %>
</div>
<div class= "user_feed_arrow">
	<%= image_tag "ico_heart_big.png", :alt => "fãs", :class => "ico", title: "fãs" %>
</div>
<div class= "user_feed_follow">
	<% @authors_fans.each do |user| %>
		<%= link_to image_tag(user.image_url(:tiny)), user, title: "user.name" %>
	<% end %>
</div>