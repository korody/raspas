<div class= "user_info">
	<div class= "user_avatar">
		<%= image_tag @author.image_url(:regular).to_s %>
	</div>
	<div class= "user_info_board round" >
		<div class= "name_edit">
			<p><%= link_to @author.name, @author %></p>
			<%= link_to (image_tag "edit.png"), edit_author_path(@author) %>
		</div>
		<% if @author.job? %>
			<p><%= @author.job %></p>
		<% end %>
		<% if @author.tipo? %>
			<p><%= @author.tipo %></p>
		<% end %>
		<% if @author.origin? %>
			<p><%= @author.origin %></p>
		<% end %>		
		<%= render 'fan_form' if signed_in? %>
	</div>
	<% if @author.bio? %>
		<div class= "user_info_board round">
			<div class= "bio">
				<%= @author.bio %>
			</div>
		</div>
	<% end %>
	<div class= "user_info_board round" >
		<%= render 'stats' %>
	</div>
	<div class= "user_info_board round">
		<div class= "last_header">
		  <p class= "p_tags">outros</p> <p class="p_tag">pensadores</p>
		  <p class= "p_mais"><%= link_to "+", authors_path, title: "explorar pensadores" %></p>
		</div>
		<div>
			<% @authors.shuffle.first(4).each do |author| %>
				<div class= "last">
				  <div class= "last_users">
				    <%= link_to image_tag(author.image_url(:tiny)), author, title: "ver perfil de #{author.name}" %>
				    <div class= "last_upwards">
				      <p><%= link_to author.name, author, title: "ver perfil de #{author.name}" %></p>
				    </div>
				  </div>
				</div>
			<% end %>
		</div>
	</div>
</div>