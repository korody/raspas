<div class= "origin_card">
  <div class= "origin_card_avatar">
    <%= link_to image_tag(song.image_url(:regular)), song %>
  </div>
  <div class= "origin_card_info">
    <div class= 'origin_type'>
      <%= link_to (image_tag 'song.png'), song %>
    </div>
    <div class= "origin_card_name relative">
      <%= link_to song.name, song %><br />
      <% if song.author.present? %>
        { <%= song.author.name %><br />
      <% else %>
        { <%= song.user.name %><br />
      <% end %>
    </div>
  </div>
</div>
